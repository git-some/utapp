body {
	background-color: #ddd;
	color: #222;
	font-family: Helvetica;
	font-size: 14px;
	margin: 0;
	padding: 0;
}
#header {
	background-color: #ccc;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#ccc), to(#999));
	border-color: #666;
	border-style: solid;
	border-width: 0 0 1px 0;
}	
#header h1 {
	color: #222;
	font-size: 20px;
	font-weight: bold;
	margin: 0 auto;
	padding: 20px 0;
	text-align: center;
	text-shadow: 0px 1px 0px #fff;
}

#header div.leftButton {
	position: absolute;
	top: 7px;
	left: 6px;
	height: 50px;
	font-weight: bold;
	text-align: center;
	color: white;
	text-shadow: rgba(0,0,0,0.6) 0px -1px 0px;
	line-height: 48px;
	border-width: 0 18px 0 18px;
	-webkit-border-image: url(/themes/main/img/button.png) 0 8 0 8;
}

ul {
	list-style: none;
	margin: 10px;
	padding: 0;
}
ul li a {
	background-color: #000;
	background-image:url('/themes/main/img/bar.png');
	background-size:100% 100%;
	border: 1px solid #999999;
	color: #FFF;
	display: block;
	font-size: 17px;
	font-weight: bold;
	margin-bottom: -1px;
	padding: 46px 44px;
	text-decoration: none;
}
ul li:first-child a {
	-webkit-border-top-left-radius: 8px;
	-webkit-border-top-right-radius: 8px;
}
ul li:last-child a {
	-webkit-border-bottom-left-radius: 8px;
	-webkit-border-bottom-right-radius: 8px;
}
ul li a:active,ul li a:hover {
	background-color:#FFF;
	color:#000;
	background-image:none;
}
#content {
	padding: 10px;
	text-shadow: 0px 1px 0px #fff;
}
#content a {
	color:#000;
}

#progress {
	-webkit-border-radius: 10px;
	background-color: rgba(0,0,0,.7);
	color: white;
	font-size: 18px;
	font-weight: bold;
	height: 80px;
	left: 60px;
	line-height: 80px;
	margin: 0 auto;
	position: absolute;
	text-align: center;
	top: 120px;
	width: 200px;
}